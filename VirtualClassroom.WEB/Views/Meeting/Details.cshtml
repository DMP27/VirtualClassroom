@model VirtualClassroom.WEB.Data.Entities.Meeting
@{
    ViewData["Title"] = "Details";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />

<h2>Details</h2>

<div>
    <h4>Meeting</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Church.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Church.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AssistancesNumber)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AssistancesNumber)
        </dd>

    </dl>
</div>
<div>
    @*<a asp-action="AddDistrict" asp-route-id="@Model.Id" class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i> District</a>*@
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-success">Back to List</a>
</div>

<hr />

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Districts</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            @*<th>
            @Html.DisplayNameFor(model => model.Assistances.FirstOrDefault().Id)
        </th>*@
                            <th>
                                @Html.DisplayNameFor(model => model.Assistances.FirstOrDefault().User.FirstName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Assistances.FirstOrDefault().User.LastName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Assistances.FirstOrDefault().User.Profession.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Assistances.FirstOrDefault().User.Address)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Assistances.FirstOrDefault().User.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Assistances.FirstOrDefault().User.PhoneNumber)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Assistances.FirstOrDefault().User.ImageFullPath)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Assistances.FirstOrDefault().IsPresent)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Assistances)
                        {
                        <tr>
                            @*<td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.User.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.User.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.User.Profession.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.User.Address)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.User.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.User.PhoneNumber)
                            </td>
                            <td>
                                <img src="@item.User.ImageFullPath" style="width:80px;height:80px;border-radius:50%" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsPresent)
                            </td>

                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<partial name="_DeleteDialog" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="/js/deleteDialog.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable();

        });
    </script>
}

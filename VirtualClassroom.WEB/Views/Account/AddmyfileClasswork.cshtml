@model VirtualClassroom.WEB.Models.AddmyfileClassworkViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>My Classwork</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddmyfileClasswork" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Myfile" class="control-label"></label>
                <input asp-for="Myfile" class="form-control" type="file"  required/>
                <span asp-validation-for="Myfile" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Attatch my Classwork" class="btn btn-primary" />

            </div>
        </form>
    </div>
</div>